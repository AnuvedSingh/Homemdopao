<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Yellow"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="212dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp"
        android:background="@drawable/logologin"
        android:layout_weight="0.07">

    </LinearLayout>
<LinearLayout
    android:layout_width="280dp"
    android:layout_height="47dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.04"
    android:background="@drawable/bginput">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/aimage"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/iconemail"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/aimage"
            android:hint="Introduza o Email"
            android:textSize="15dp"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:gravity="start|center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Brown"
            android:background="@null"/>

    </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="0.04"
        android:background="@drawable/bginput">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pas_img"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/iconpassword"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Introduza a palavra-passe"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/pas_img"
                android:inputType="textPassword"
                android:gravity="start|center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/Brown"
                android:background="@null"
                android:maxLength="15"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@drawable/btsmall"
        />
    </LinearLayout>

</LinearLayout>